<%= link_to "Back to Homepage", :root %>
  <div class="container" id="messages" align="center">
    <div class="row">
      <h1><u>All Messages</u></h1>
    </div>
    <div class="row">
      <div class="col-lg-4 col-md-4 col-sm-4">Name</div>
      <div class="col-lg-4 col-md-4 col-sm-4">Email</div>
      <div class="col-lg-4 col-md-4 col-sm-4">Message</div>
    </div>
    <hr>
    <% @contacts.each do |contact| %>
      <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4"><%= contact.name %></div>
        <div class="col-lg-4 col-md-4 col-sm-4"><%= contact.email %></div>
        <div class="col-lg-4 col-md-4 col-sm-4"><%= contact.message %></div>
      </div>
      <hr>
    <% end %>
  </div>