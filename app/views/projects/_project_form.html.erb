<%= form_for @project do |f| %>
  
  <div class="row control-group">
    <div class="form-group col-xs-8 col-xs-offset-2 floating-label-form-group controls">
      <%= f.label :picture, value: "Image" %>
      <%= f.file_field :picture %>
    </div>
  </div>
  <div class="row control-group">
    <div class="form-group col-xs-8 col-xs-offset-2 floating-label-form-group controls">
      <%= f.label :name %>
      <%= f.text_field :name, :type => "text", :class => "form-control", :placeholder => "Name", :id => "name", :required => true %>
    </div>
  </div>
  <div class="row control-group">
    <div class="form-group col-xs-8 col-xs-offset-2 floating-label-form-group controls">
      <%= f.label :description %>
      <%= f.text_area :description, :rows => "5", :class => "form-control", :placeholder => "Description", :id => "description", :required => true %>
    </div>
  </div>
  <div class="row control-group">
    <div class="form-group col-xs-8 col-xs-offset-2 floating-label-form-group controls">
      <%= f.label :project_type %>
      <%= f.text_field :project_type, :type => "text", :class => "form-control", :placeholder => "Project Type", :id => "project_type", :required => true %>
    </div>
  </div>
  <div class="row control-group">
    <div class="form-group col-xs-8 col-xs-offset-2 floating-label-form-group controls">
      <%= f.label :website %>
      <%= f.text_field :website, :type => "text", :class => "form-control", :placeholder => "Website", :id => "website", :required => true %>
    </div>
  </div>
  <div class="row control-group">
    <div class="form-group col-xs-8 col-xs-offset-2 floating-label-form-group controls">
      <%= f.label :github %>
      <%= f.text_field :github, :type => "text", :class => "form-control", :placeholder => "Github", :id => "github", :required => true %>
    </div>
  </div>
  <div class="row control-group">
    <div class="form-group col-xs-8 col-xs-offset-2 floating-label-form-group controls">
      <%= f.label :documentation %>
      <%= f.text_field :documentation, :type => "text", :class => "form-control", :placeholder => "Documentation", :id => "documentation" %>
    </div>
  </div>
  <div class="row control-group">
    <div class="form-group col-xs-8 col-xs-offset-2 floating-label-form-group controls">
      <%= f.label :order_listed %>
      <%= f.text_field :order_listed, :type => "text", :class => "form-control", :placeholder => "Order to be listed", :id => "order_listed", :required => true %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-xs-8 col-xs-offset-2">
      <%= f.submit "Submit", :type => "submit", :class => "btn btn-success btn-lg" %>
    </div>
  </div>
<% end %>