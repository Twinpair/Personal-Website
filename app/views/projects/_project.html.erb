<% if @counter % 3 == 0 && @counter != 0%>
  </div>
  <div class="row">
<% end %>    
    <div class="col-md-4">
      <article class="article-post">
        <a href="<%= project.website %>" target="blank">
          <div class="article-image has-overlay" style="background-image: url(<%= project.picture.url %>)">
            <span class="featured-tag"><%= project.project_type %></span>
          </div>
        </a>
        <figure>
          <figcaption>
            <h2 class="project-name"><%= project.name %></h2>
            <h4 class="project-tools">(<%= project.tools %>)</h4>
            <p><%= project.description %></p>
          </figcaption>
        </figure>
        <% if @edit_button %>
          <%= link_to "Edit (Order: #{project.order_listed})", edit_project_url(project.id), class: "btn btn-danger btn-lg" %>
          <%= link_to "Delete", project, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-danger btn-lg" %>
        <% else %>
          <% if project.website.include?("drive.google") %>
            <%= link_to "Download", project.website, target: "blank", class: "btn btn-danger btn-lg" %>
          <% else %>
            <%= link_to "Visit Website", project.website, target: "blank", class: "btn btn-danger btn-lg" %>
          <% end %>
        <%= link_to "Source Code", project.github, target: "blank", class: "btn btn-danger btn-lg" %>
          <% if !project.documentation.nil? && !project.documentation.blank? %>
            <%= link_to "View Documentation", project.documentation, target: "blank", class: "btn btn-danger btn-lg doc" %>
          <% end %>
        <% end %>
      </article>
    </div>
<% @counter = @counter + 1 %>